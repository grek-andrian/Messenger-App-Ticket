<h1>All users</h1>

<ul>
    <% @users.each do |user| %>
    <li>
        <%= image_tag current_user.avatar.url(:thumb) %>
        <%= user.name %>
        <%= link_to "Edit profile", users_admin_path(user.id) %>
        <% if current_user.admin%>
        <%= link_to "Delete", users_admin_path(user.id), method: :delete,
                                 data: { confirm: "You sure?" } %>
        <% end %>
    </li>
    <% end %>
</ul>
<%= button_to "Add new user", new_users_admin_path, method: :get %>
