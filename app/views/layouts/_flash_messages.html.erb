<div>
    <% flash.each do |name, msg| %>
    <div class="alert alert-dismissable <%= flash_class(name) %> fade in">
        <a class="close" data-dismiss="alert">&#215</a>
        <% if msg.is_a?(String) %>
        <div id="flash_<%= name %>">
            <%= sanitize(msg) %>
        </div>
        <% end %>
    </div>
    <% end %>
</div>
