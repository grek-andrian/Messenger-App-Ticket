<%= form_for :conversation, url: :conversations, html: { class: "" } do |f| %>
<div class="form-group">
    <%= f.label :recipients %>
    <%= f.collection_select(:recipients, User.where.not(id: current_user.id), :id, :name, {prompt: "Select a recipient"}, {class: "form-control"}) %>
</div>
<div class="form-group">
    <%= f.label :subject %>
    <%= f.text_field :subject, placeholder: "Subject", class: "form-control" %>
</div>
<div class="form-group">
    <%= f.label :message %>
    <%= f.text_area :body, class: 'form-control',placeholder: "Type your message here", rows: 5  %>
</div>

<%= f.submit "Send Message", class: "btn btn-success" %>
<% end %>
